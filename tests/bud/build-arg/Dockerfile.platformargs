FROM scratch
ARG BUILDPLATFORM
ARG BUILDOS
ARG BUILDARCH
ARG BUILDVARIANT
ARG TARGETPLATFORM
ARG TARGETOS
ARG TARGETARCH
ARG TARGETVARIANT

ENV BUILDPLATFORM  $BUILDPLATFORM
ENV BUILDOS        $BUILDOS
ENV BUILDARCH      $BUILDARCH
ENV BUILDVARIANT   $BUILDVARIANT
ENV TARGETPLATFORM $TARGETPLATFORM
ENV TARGETOS       $TARGETOS
ENV TARGETARCH     $TARGETARCH
ENV TARGETVARIANT  $TARGETVARIANT

CMD ["echo", "BUILDPLATFORM=$BUILDPLATFORM  BUILDOS=$BUILDOS  BUILDARCH=$BUILDARCH  BUILDVARIANT=$BUILDVARIANT TARGETPLATFORM=$TARGETPLATFORM  TARGETOS=$TARGETOS  TARGETARCH=$TARGETARCH  TARGETVARIANT=$TARGETVARIANT"]
